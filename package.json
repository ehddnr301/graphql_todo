{
  "name": "graphql-todo",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/graphql": "^14.5.0",
    "@types/helmet": "^0.0.47",
    "@types/jest": "^26.0.4",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mongodb-memory-server": "^2.3.0",
    "@types/mongoose": "^5.7.30",
    "@types/morgan": "^1.9.1",
    "@types/node": "^14.0.18",
    "babel-runtime": "^6.26.0",
    "copy": "^0.3.2",
    "gql-merge": "^0.0.6",
    "graphql-to-typescript": "^0.1.2",
    "nodemon": "^2.0.4",
    "typescript": "^3.9.6"
  },
  "scripts": {
    "start:dev": "nodemon",
    "build": "rimraf ./build && tsc",
    "postbuild": "cd src && copy ./api/**/*.graphql ../build/api",
    "start": "npm run build && node build/app.js",
    "pretypes": "gql-merge --out-file ./src/schema.graphql ./src/api/**/*.graphql",
    "types": "graphql-to-typescript ./src/schema.graphql ./src/types/graph.d.ts",
    "test": "jest --runInBand ./src/test/setup.test.ts"
  },
  "dependencies": {
    "@types/passport-jwt": "^3.0.3",
    "apollo-server": "^2.15.1",
    "apollo-server-testing": "^2.15.1",
    "bcrypt": "^5.0.0",
    "dotenv": "^8.2.0",
    "graphql-tools": "^6.0.12",
    "graphql-yoga": "^1.18.3",
    "helmet": "^3.23.3",
    "jest": "^26.1.0",
    "jsonwebtoken": "^8.5.1",
    "merge-graphql-schemas": "^1.7.8",
    "mongodb-memory-server": "^6.6.1",
    "mongoose": "^5.9.21",
    "morgan": "^1.10.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.1.1",
    "ts-node": "^8.10.2"
  }
}
